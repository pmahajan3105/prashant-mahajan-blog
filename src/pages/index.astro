---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Prashant Mahajan 
      </h1>

      <p>
        Hi, I'm Prashant Mahajan â€” a product leader turned founder, passionate about building AI-powered products that solve real problems. I founded and scaled Zeda.io from zero to $1M ARR, serving 100+ enterprise customers before a successful exit. My journey spans Paytm, Tokopedia, and Branch.io, where I built and scaled products for millions of users across the globe.
      </p>
      <p class="mt-2">
        <strong>What I write about:</strong>
        <ul class="list-disc list-inside mt-1">
          <li>Product strategy frameworks that work in practice</li>
          <li>AI/ML product development from zero to scale</li>
          <li>Startup lessons from the trenches</li>
          <li>Leadership insights from managing distributed teams</li>
          <li>Industry analysis on the future of product management and AI</li>
        </ul>
      </p>
      <p class="mt-2">
        <strong>Let's connect:</strong> <br />
        <a href="https://linkedin.com/in/prashantmahajan31" class="underline hover:text-accent" target="_blank">LinkedIn</a> |
        <a href="https://twitter.com/your-twitter" class="underline hover:text-accent" target="_blank">Twitter</a> |
        <a href="mailto:mahajan3105@gmail.com" class="underline hover:text-accent">Email</a>
      </p>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
